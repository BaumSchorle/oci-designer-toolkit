{%- macro document_tag(key, value, namespace) -%}
    {%- if namespace is defined -%}| {{ namespace }} {%- endif %}| {{ key }} | {{ value }} |
{%- endmacro %}

{%- macro document_property(name, value) -%}
    {{ "| %-15s | %s |" | format(name, value) }}
