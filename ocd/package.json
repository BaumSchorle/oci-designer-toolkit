{
    "name": "ocd",
    "description": "OKIT Open Cloud Designer",
    "not-workspaces": [
        "ocd-codegen",
        "ocd-core",
        "ocd-export",
        "ocd-import",
        "ocd-query",
        "ocd-react",
        "ocd-desktop",
        "ocd-vscode"
    ],
    "scripts": {
        "install-ocd-codegen": "cd ocd-codegen && npm install",
        "install-ocd-react": "cd ocd-codegen && npm install",
        "install": "npm run install-ocd-codegen && npm run install-ocd-react",
        "build": "npm run build --workspaces --if-present",
        "import": "cd ocd-codegen && npm run import",
        "generate": "cd ocd-codegen && npm run generate",
        "import-and-generate": "cd ocd-codegen && npm run import-and-generate",
        "web": "cd ocd-react && npm run start",
        "desktop": "cd ocd-react && npm run electron-release-pack",
        "dev-desktop": "cd ocd-react && npm run electron-pack"
    }
}
