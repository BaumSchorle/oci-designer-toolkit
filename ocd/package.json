{
    "name": "ocd",
    "description": "OKIT Open Cloud Designer",
    "workspaces": [
        "packages/ocd-codegen",
        "packages/ocd-core",
        "packages/ocd-export",
        "packages/ocd-import",
        "packages/ocd-query",
        "packages/ocd-react",
        "packages/ocd-desktop",
        "packages/ocd-vscode"
    ],
    "scripts": {
        "build": "npm run build --workspaces --if-present",
        "import": "npm run import --workspace=ocd-codegen",
        "generate": "npm run generate --workspace=ocd-codegen",
        "import-and-generate": "npm run import-and-generate --workspace=ocd-codegen",
        "web": "npm run start --workspace=ocd-react",
        "desktop": "npm run electron-release-pack --workspace=ocd-react",
        "dev-desktop": "npm run electron-pack --workspace=ocd-react"
    }
}
